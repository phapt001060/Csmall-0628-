<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.csmall.server.mapper.SkuMapper">

    <!-- int insert(Sku sku);-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into pms_sku(
            id,spu_id,title,bar_code,attribute_template_id,
            pictures,specifications,album_id,price,stock,
            stock_threshold,sales,comment_count, positive_comment_count,sort,
            gmt_create,gmt_modified
        )
        values (
                   #{id},#{spuId},#{title},#{barCode},#{attributeTemplateId},
                   #{pictures},#{specifications},#{albumId},#{price},#{stock},
                   #{stockThreshold},#{sales},#{commentCount},#{positiveCommentCount},#{sort},
                   #{gmtCreate},#{gmtModified}
               )
    </insert>

    <!--int deleteById(Long id);-->
    <delete id="deleteById">
        delete
        from pms_sku
        where id = #{id}
    </delete>

    <update id="updateNameById">
        update pms_sku
        set name= #{name}
        where id = #{id}
    </update>

    <!-- int deleteByIds(Long... ids); -->
    <delete id="deleteByIds">
        delete from pms_sku where id in (
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>


    <select id="getById" resultMap="DetailResultMap">
        select
        <include refid="DetailQueryFields" />
        from
        pms_sku
        where
        id=#{id}
    </select>

    <sql id="DetailQueryFields">
        id, spu_id, title, bar_code, attribute_template_id,
        specifications, album_id, pictures, price, stock,
        stock_threshold, sales, comment_count, positive_comment_count, sort
    </sql>

    <resultMap id="DetailResultMap" type="cn.tedu.csmall.server.pojo.vo.SkuDetailVO">
        <result column="spu_id" property="spuId" />
        <result column="bar_code" property="barCode" />
        <result column="attribute_template_id" property="attributeTemplateId" />
        <result column="album_id" property="albumId" />
        <result column="stock_threshold" property="stockThreshold" />
        <result column="comment_count" property="commentCount" />
        <result column="positive_comment_count" property="positiveCommentCount" />
    </resultMap>

    <select id="list" resultMap="ListCategory">
        select
        <include refid="ListItemQueryFields" />
        from
        pms_sku
        order by id
    </select>

    <sql id="ListItemQueryFields">
        <if test="true">
            id, spu_id, title, bar_code, attribute_template_id,
            specifications, album_id, pictures, price, stock,
            stock_threshold, sales, comment_count, positive_comment_count, sort
        </if>
    </sql>

    <resultMap id="ListCategory" type="cn.tedu.csmall.server.pojo.vo.SkuListVO">
        <result column="spu_id" property="spuId" />
        <result column="bar_code" property="barCode" />
        <result column="attribute_template_id" property="attributeTemplateId" />
        <result column="album_id" property="albumId" />
        <result column="stock_threshold" property="stockThreshold" />
        <result column="comment_count" property="commentCount" />
        <result column="positive_comment_count" property="positiveCommentCount" />
    </resultMap>

</mapper>
