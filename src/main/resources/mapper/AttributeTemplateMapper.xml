<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.csmall.server.mapper.AttributeTemplateMapper">

    <!--int insertAttributeTemplate(AttributeTemplate attributeTemplate);-->
    <insert id="insertAttributeTemplate" useGeneratedKeys="true" keyProperty="id">
        insert into pms_attribute_template (
            name,pinyin,keywords,sort,gmt_create,gmt_modified
        ) values (
            #{name},#{pinyin},#{keywords},#{sort},#{gmtCreate},#{gmtModified}
                 )
    </insert>

    <!--int deleteById(Long id);-->
    <delete id="deleteById">
        delete from pms_attribute_template where id=#{id}
    </delete>

    <update id="updateNameById">
        update pms_attribute_template set name= #{name} where id=#{id}
    </update>

    <!-- int deleteByIds(Long... ids); -->
    <delete id="deleteByIds">
        delete from pms_attribute_template where id in (
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>
</mapper>
