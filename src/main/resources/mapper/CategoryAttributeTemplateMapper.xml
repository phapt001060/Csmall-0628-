<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.csmall.server.mapper.CategoryAttributeTemplateMapper">

    <!-- int insert(CategoryAttributeTemplate categoryAttributeTemplate); -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into pms_category_attribute_template (
            category_id,attribute_template_id,gmt_create,gmt_modified
        ) values (
            #{categoryId},#{attributeTemplateId},#{gmtCreate},#{gmtModified}
                 )
    </insert>

    <!--int deleteById(Long id);-->
    <delete id="deleteById">
        delete from pms_category_attribute_template where id=#{id}
    </delete>

    <update id="updateNameById">
        update pms_category_attribute_template set name= #{name} where id=#{id}
    </update>

    <!-- int deleteByIds(Long... ids); -->
    <delete id="deleteByIds">
        delete from pms_category_attribute_template where id in (
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>
</mapper>
