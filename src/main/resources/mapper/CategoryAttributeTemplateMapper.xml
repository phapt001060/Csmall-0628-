<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.csmall.server.mapper.CategoryAttributeTemplateMapper">

    <!-- int insert(CategoryAttributeTemplate categoryAttributeTemplate); -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into pms_category_attribute_template (
            category_id,attribute_template_id,gmt_create,gmt_modified
        ) values (
            #{categoryId},#{attributeTemplateId},#{gmtCreate},#{gmtModified}
                 )
    </insert>

    <!--int deleteById(Long id);-->
    <delete id="deleteById">
        delete from pms_category_attribute_template where id=#{id}
    </delete>

    <update id="updateNameById">
        update pms_category_attribute_template set name= #{name} where id=#{id}
    </update>

    <!-- int deleteByIds(Long... ids); -->
    <delete id="deleteByIds">
        delete from pms_category_attribute_template where id in (
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>


    <select id="count" resultType="int">
        select count(*) from pms_category_attribute_template
    </select>

    <select id="getById" resultMap="DetailResultMap">
        select
        <include refid="DetailQueryFields" />
        from
        pms_category_attribute_template

        where
        id=#{id}
    </select>

    <resultMap id="DetailResultMap" type="cn.tedu.csmall.server.pojo.vo.CategoryAttributeTemplateDetailVO">
        <result column="category_id" property="categoryId" />
        <result column="attribute_template_id" property="attributeTemplateId" />
    </resultMap>

    <sql id="DetailQueryFields">
        <if test="true">
            id, category_id, attribute_template_id
        </if>
    </sql>


    <select id="list" resultMap="ListItemResultMap">
        select
        <include refid="ListItemQueryFields" />
        from
        pms_category_attribute_template
        order by id
    </select>

    <resultMap id="ListItemResultMap" type="cn.tedu.csmall.server.pojo.vo.CategoryAttributeTemplateListItemVO">
        <id column="id" property="id" />
        <result column="category_id" property="categoryId" />
        <result column="attribute_template_id" property="attributeTemplateId" />
    </resultMap>

    <sql id="ListItemQueryFields">
        id, category_id, attribute_template_id
    </sql>
</mapper>
