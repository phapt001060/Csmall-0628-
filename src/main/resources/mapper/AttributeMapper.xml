<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.csmall.server.mapper.AttributeMapper">

    <!-- int insert(Attribute attribute); -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into pms_attribute (
             name,description,type,input_type,value_list
            ,unit,sort,is_allow_customize,gmt_create,gmt_modified
        ) values (
              #{name},#{description},#{type},#{inputType},#{valueList}
              ,#{unit},#{sort},#{isAllowCustomize},#{gmtCreate},#{gmtModified}
                 )
    </insert>


    <!--int deleteById(Long id);-->
    <delete id="deleteById">
        delete from pms_attribute where id=#{id}
    </delete>

    <update id="updateNameById">
        update pms_attribute set name= #{name} where id=#{id}
    </update>

    <!-- int deleteByIds(Long... ids); -->
    <delete id="deleteByIds">
        delete from pms_attribute where id in (
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>




    <select id="count" resultType="int">
        select count(*) from pms_attribute
    </select>

    <select id="getById" resultMap="DetailResultMap">
        select
        <include refid="DetailQueryFields" />
        from
        pms_attribute

        where
        id=#{id}
    </select>

    <resultMap id="DetailResultMap" type="cn.tedu.csmall.server.pojo.vo.AttributeDetailVO">
        <result column="template_id" property="templateId" />
        <result column="input_type" property="inputType" />
        <result column="is_allow_customize" property="isAllowCustomize" />
    </resultMap>

    <sql id="DetailQueryFields">
        <if test="true">
            id, template_id, name, description, type,
            input_type, value_list, unit, sort, is_allow_customize
        </if>
    </sql>


    <select id="list" resultMap="ListItemResultMap">
        select
        <include refid="ListItemQueryFields" />
        from
        pms_attribute
        order by id
    </select>

    <resultMap id="ListItemResultMap" type="cn.tedu.csmall.server.pojo.vo.AttributeListItemVO">
        <id column="id" property="id" />
        <result column="template_id" property="templateId" />
        <result column="input_type" property="inputType" />
        <result column="is_allow_customize" property="isAllowCustomize" />
    </resultMap>

    <sql id="ListItemQueryFields">
        id, template_id, name, description, type,
        input_type, value_list, unit, sort, is_allow_customize
    </sql>
</mapper>
