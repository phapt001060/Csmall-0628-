<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.csmall.server.mapper.PictureMapper">

    <!-- int insert(Picture picture); -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into pms_picture (
            url,description,width,height,is_cover,
            sort,gmt_create,gmt_modified
        ) values (
            #{url},#{description},#{width},#{height},#{isCover},
            #{sort},#{gmtCreate},#{gmtModified}
                 )
    </insert>

    <!--int deleteById(Long id);-->
    <delete id="deleteById">
        delete from pms_picture where id=#{id}
    </delete>

    <update id="updateNameById">
        update pms_picture set name= #{name} where id=#{id}
    </update>

    <!-- int deleteByIds(Long... ids); -->
    <delete id="deleteByIds">
        delete from pms_picture where id in (
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>


    <select id="getById" resultMap="DetailResultMap">
        select
        <include refid="DetailQueryFields" />
        from
        pms_picture
        where
        id=#{id}
    </select>

    <sql id="DetailQueryFields">
        id, album_id, url, description, width, height, is_cover, sort
    </sql>

    <resultMap id="DetailResultMap" type="cn.tedu.csmall.server.pojo.vo.PictureDetailVO">
        <result column="album_id" property="albumId" />
        <result column="is_cover" property="isCover" />
    </resultMap>

    <select id="list" resultMap="ListCategory">
        select
        <include refid="ListItemQueryFields" />
        from
        pms_picture
        order by id
    </select>

    <sql id="ListItemQueryFields">
        <if test="true">
            id, album_id, url, description, width, height, is_cover, sort
        </if>
    </sql>

    <resultMap id="ListCategory" type="cn.tedu.csmall.server.pojo.vo.PictureListItemVO">
        <result column="album_id" property="albumId" />
        <result column="is_cover" property="isCover" />
    </resultMap>

</mapper>
