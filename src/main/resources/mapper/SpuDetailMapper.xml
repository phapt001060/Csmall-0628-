<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.csmall.server.mapper.SpuDetailMapper">

    <!-- int insert(SpuDetail spuDetail); -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into pms_spu_detail (
           spu_id,detail,gmt_create,gmt_modified
        ) values (
           #{spuId},#{detail},#{gmtCreate},#{gmtModified}
                 )
    </insert>

    <!--int deleteById(Long id);-->
    <delete id="deleteById">
        delete from pms_spu_detail where id=#{id}
    </delete>

    <update id="updateNameById">
        update pms_spu_detail set name= #{name} where id=#{id}
    </update>

    <!-- int deleteByIds(Long... ids); -->
    <delete id="deleteByIds">
        delete from pms_spu_detail where id in (
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>


    <select id="getById" resultMap="DetailResultMap">
        select
        <include refid="DetailQueryFields" />
        from
        pms_spu_detail
        where
        id=#{id}
    </select>

    <sql id="DetailQueryFields">
        id, spu_id, detail
    </sql>

    <resultMap id="DetailResultMap" type="cn.tedu.csmall.server.pojo.vo.SpuDetailTwoVO">
        <result column="sku_id" property="skuId" />
        <result column="attribute_id" property="attributeId" />
        <result column="attribute_name" property="attributeName" />
        <result column="attribute_value" property="attributeValue" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <select id="list" resultMap="ListCategory">
        select
        <include refid="ListItemQueryFields" />
        from
        pms_spu_detail
        order by id
    </select>

    <sql id="ListItemQueryFields">
        <if test="true">
            id, spu_id, detail
        </if>
    </sql>

    <resultMap id="ListCategory" type="cn.tedu.csmall.server.pojo.vo.SpuDetailTwoListItemVO">
        <result column="spu_id" property="spuId" />
    </resultMap>
</mapper>
